{
  "name": "word-wave",
  "displayName": "Word wave",
  "version": "0.0.1",
  "description": "Passively absorb vocabulary through natural browsing, reducing the burden of deliberate memorization.",
  "author": "hakuun",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.2",
    "@plasmohq/storage": "^1.15.0",
    "jieba-wasm": "^2.4.0",
    "openai": "^6.9.1",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/history-hook.js"
        ],
        "matches": [
          "<all_urls>"
        ]
      },
      {
        "resources": [
          "assets/jieba/jieba_rs_wasm_bg.wasm",
          "assets/jieba/jieba_rs_wasm.js"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "permissions": [
      "storage"
    ]
  }
}